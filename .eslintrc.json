{
  "root": true,
  "extends": ["eslint:recommended", "plugin:vue/recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "shared-node-browser": true
  },
  "overrides": [
    {
      "files": ["server.js", "build/*.js"],
      "env": {
        "shared-node-browser": false,
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
