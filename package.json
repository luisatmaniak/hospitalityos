{
  "name": "hospitality-os",
  "description": ":)",
  "version": "0.1.0",
  "author": "MNK",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "cross-env NODE_ENV=development node server",
    "lint:css": "stylelint 'src/**/*.vue'",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "build:client":
      "cross-env NODE_ENV=production VUE_ENV=client webpack --progress --hide-modules --config ./build/webpack.client.js",
    "build:server":
      "cross-env NODE_ENV=production VUE_ENV=server webpack --progress --hide-modules --config ./build/webpack.server.js",
    "build": "rimraf dist && yarn run build:client && yarn run build:server",
    "start": "cross-env NODE_ENV=production node server"
  },
  "browserslist": ["> 1%", "last 2 versions", "not ie <= 10"],
  "dependencies": {
    "@babel/polyfill": "latest",
    "axios": "^0.18.0",
    "express": "^4.16.2",
    "vue": "^2.5.11",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-stage-3": "latest",
    "babel-eslint": "^8.2.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "next",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.5.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-vue": "^4.2.2",
    "extract-text-webpack-plugin": "next",
    "file-loader": "^1.1.7",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "lint-staged": "^6.1.1",
    "memory-fs": "^0.4.1",
    "node-sass": "^4.5.3",
    "prettier": "1.10.2",
    "sass-loader": "^6.0.6",
    "stylelint": "^9.0.0",
    "stylelint-config-recommended-scss": "^3.0.0",
    "stylelint-scss": "^2.3.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "vue-loader": "^14.1.1",
    "vue-template-compiler": "^2.5.13",
    "webpack": "next",
    "webpack-cli": "^2.0.6",
    "webpack-dev-middleware": "^2.0.5",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "*.vue": ["prettier --write", "eslint --ignore-path .gitignore --fix", "stylelint", "git add"],
    "*.js": ["prettier --write", "eslint --ignore-path .gitignore --fix", "git add"],
    "*.{json,css,md}": ["prettier --write", "git add"]
  }
}
